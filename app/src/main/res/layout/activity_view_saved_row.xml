<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/view_saved_row_text_wayName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="way name"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/view_saved_row_text_wayNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="way number"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/view_saved_row_text_engName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Eng Name"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/view_saved_row_text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="date"
            android:textSize="25sp" />
    </LinearLayout>
</android.support.v7.widget.CardView>